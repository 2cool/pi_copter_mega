<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/editTextTimer"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Timer"
            android:id="@+id/textView14"
            android:layout_row="0"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/textViewDistance"
            android:layout_row="0"
            android:layout_column="2" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBarTimer"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="3"


            />

        <EditText
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/editTextSpeed"
            android:layout_row="2"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Speed"
            android:id="@+id/textView15"
            android:layout_row="2"
            android:layout_column="1" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBarSpeed"
            android:layout_row="3"
            android:layout_column="0"
            android:progress="10"
            android:max="10"
            android:layout_columnSpan="3" />


        <EditText
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/editTextVerSpeed"
            android:layout_row="4"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Ver.Speed"
            android:id="@+id/textView16"
            android:layout_row="4"
            android:layout_column="1" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBarVerSpeed"
            android:layout_row="5"
            android:layout_column="0"
            android:progress="5"
            android:max="5"
            android:layout_columnSpan="3" />

        <EditText
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/editTextAltitude"
            android:layout_row="6"
            android:layout_column="0"
            android:text="30" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Altitude"
            android:id="@+id/textView17"
            android:layout_row="6"
            android:layout_column="1" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBarAltitude"
            android:layout_row="7"
            android:layout_column="0"
            android:max="300"
            android:min="15"
            android:layout_columnSpan="3" />

        <EditText
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/editTextCamAng"
            android:layout_row="8"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Camera angl"
            android:id="@+id/textView20"
            android:layout_row="8"
            android:layout_column="1" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBarCamAng"
            android:layout_row="9"
            android:layout_column="0"
            android:layout_columnSpan="3" />


        <EditText
            android:id="@+id/e_prog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="10"
            android:layout_column="2"
            android:ems="10"
            android:inputType="text"
            android:text="6" />

        <SeekBar
            android:id="@+id/s_prog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="11"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:max="11"
            android:progress="6" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_row="10"
            android:layout_column="1"
            android:text="prog:"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="10"
            android:layout_column="0"
            android:text=" Do" />

        <EditText
            android:id="@+id/e_zoom"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:layout_row="12"
            android:layout_column="0"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="12"
            android:layout_column="1"
            android:text="zoom:" />

        <SeekBar
            android:id="@+id/s_zoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="3"
            android:layout_row="13"
            android:layout_column="0" />

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView19"
        android:layout_gravity="right" />
</LinearLayout>